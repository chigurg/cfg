//Slotbinds with switching crosshair
alias "ch1" "-attack; bind "mouse1" "+attack"; cl_crosshairgap "-1"; cl_crosshairsize "2"; cl_crosshairthickness "0"; cl_crosshaircolor "4"; cl_crosshaircolor_b "50"; cl_crosshaircolor_r "50"; cl_crosshaircolor_g "250"; cl_crosshairdot "0"; cl_crosshairstyle "4"; cl_crosshairusealpha "1"; cl_crosshair_drawoutline "0"; sv_grenade_trajectory "0"" //default
alias "ch2" "cl_crosshairgap -5; cl_crosshairsize 10000; cl_crosshaircolor 1; sv_grenade_trajectory "1"" //Smoke green
alias "ch3" "cl_crosshairgap -5; cl_crosshairsize 10000; cl_crosshaircolor 5; cl_crosshaircolor_g 50; cl_crosshaircolor_b 0; cl_crosshaircolor_r 250; sv_grenade_trajectory "1"" //Molly Red
alias "ch4" "cl_crosshairgap -5; cl_crosshairsize 10000; cl_crosshaircolor 4; sv_grenade_trajectory "1"" //Flash Blue

